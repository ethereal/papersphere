<h4>My Reading Lists</h4>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Papers</th>
    <th>Actions</th>
  </tr>

<% @reading_lists.each do |reading_list| %>
  <tr>
    <td><%= link_to reading_list.name , reading_list %>
    <td><%= reading_list.reading_list_papers.count %></td>
    <td><%= link_to 'Edit', edit_reading_list_path(reading_list) %> - <%= link_to 'Destroy', reading_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<h4>Reading Lists shared with me</h4>

<table class="table table-striped table-hover">
  <tr>
    <th>Group</th>
    <th>Name</th>
    <th>Papers</th>
  </tr>

<% ### TODO fix terrible, terrible n-ary multi-level join %>
<% current_user.groups.each do |group| %>
  <% group.reading_lists.each do |reading_list| %>
    <tr>
      <td><%= link_to group.name , group %></td>
      <td><%= link_to reading_list.name , reading_list %>
      <td><%= reading_list.reading_list_papers.count %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br />

